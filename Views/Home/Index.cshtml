@model List<EticaretProje.Models.Genre>


@{
    Layout = "_LayoutNew";
}

@{
    ViewData["Title"] = "Home Page";
}


<style>
    li:hover {
        background-color: #DC3545;
    }
</style>
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Tüm departmanlar</span>
                    </div>
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li><a href="#">@item.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                Tüm Kategoriler
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="Neye ihtiyacınız var?">
                            <button type="submit" class="site-btn">ARA</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Müzikler</h2>
                        </div>

                        <div class="row">
                            <div class="product__discount__slider owl-carousel">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-4">                                    
                                        <div class="product__discount__item">

                                            <div id="header" class="product__discount__item__pic set-bg"
                                              data-setbg="@item.Path">                                          
                                                @*<div class="product__discount__percent">-20%</div>*@
                                             @*   <ul class="product__item__pic__hover">
                                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                                </ul>*@
                                            </div>
                                            <div class="product__discount__item__text">
                                              @*  <span>@item.Name</span>*@
                                                <h5>
                                                    <a asp-action="Getir" asp-controller="Home" asp-route-id="@item.GenreId">@item.Name</a>
                                                </h5>
                                                 
                                                @*<div class="product__item__price">$30.00 <span>$36.00</span></div>*@
                                            </div>
                                        </div>
                                       
                                    </div>
                                }
                              
                               
                    </div>
                    </div>
                    <div class="product__pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</section>


<script>
    function Update() {
        let id = $("#kategoriIdGetir").val();
        let name = $("#kategoriAd").val();
        let path = $("#kategoriPhoto").val();
        let description = $("#kategoriDescription").val();

        $.ajax({
            url: "/Home/Guncelle/?id=" + id + "&name=" + name + "&path=" + path + "&description=" + description,
            type: "POST",
            dataType: "JSON",
            success: function () {
                alert("BAŞARILI!");
            },
            error: function () {
                alert("HATA!");
            }
              if(url: "/Home/Guncelle/?id=" + id + "&name=" + name + "&path=" + path + "&description=" + description,)
        {
            MessageBox.Show("Baraşarılı");
        }
              else
        {
            MessageBox.Show("Başarısız");
        }
    })
        }
</script>

                          